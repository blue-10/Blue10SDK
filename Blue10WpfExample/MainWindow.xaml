                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Administration Code" Binding="{Binding Path=AdministrationCode, UpdateSourceTrigger=PropertyChanged}" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridTextColumn Header="Percentage" Binding="{Binding Path=Percentage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridCheckBoxColumn Header="Inclusive" IsThreeState="True" Binding="{Binding Path=Inclusive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridCheckBoxColumn Header="Reverse charge" IsThreeState="True" Binding="{Binding Path=ReverseCharge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="SaveVatCode">Save</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="DeleteVatCode">Delete</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                     </DataGrid>
                    
                </Grid>
            </TabItem>
