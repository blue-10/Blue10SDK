                            <DataGridComboBoxColumn Header="Default VAT code"  x:Name="glaccountVatCodeList" SelectedValueBinding="{Binding Path=DefaultVatCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Key" DisplayMemberPath="Value"  />
