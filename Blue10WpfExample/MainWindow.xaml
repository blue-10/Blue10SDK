                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="767*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="vatcodeCompanyList" Grid.Column="1" HorizontalAlignment="Left" SelectionChanged="ListVatCodes" Margin="-35,15,0,0" VerticalAlignment="Top" Width="120"/>
