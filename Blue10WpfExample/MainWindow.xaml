<Window x:Class="Blue10SdkWpfExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Blue10 SDK Example" Height="800" Width="1600">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Config">
                <Grid Background="#FFE5E5E5">
                    <TextBlock Padding="5">
                        <Label Margin="0,0,0,0" >Apikey : </Label>
                     <TextBox x:Name="ApiKey" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="475"/>
                    </TextBlock>
                    <TextBlock Padding="5">
                        <Label Margin="0,0,0,0" >Api url : </Label>
                     <TextBox x:Name="ApiUrl" HorizontalAlignment="Left" Height="23" Margin="10,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
                    </TextBlock>
                    <Button x:Name="ConnectButton" Content="Connect" Click="ConnectToApi" HorizontalAlignment="Left" Margin="70,95,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="connectionStatus" Content="" HorizontalAlignment="Left" Margin="70,135,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Administration actions" Name="ErpActionTab" Visibility="Hidden" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="767*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="showErpActions" Content="Get administration actions" Click="ListErpActions" HorizontalAlignment="Left" Margin="5,15,0,0" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2"/>
                    <DataGrid  Margin="5,55,0,0" x:Name="erpactionGrid" AutoGenerateColumns="False" CanUserAddRows="false" ItemsSource="{Binding Path=erpactionGrid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Company" Binding="{Binding Path=IdCompany}" />
                            <DataGridTextColumn Header="Action" Binding="{Binding Path=Action}" />
                            <DataGridTextColumn Header="Created" Binding="{Binding Path=CreationTime}" />
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="FinishErpAction">Finish action</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Document actions" Name="DocumentActionTab" Visibility="Hidden" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="767*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="showDocumentActions" Content="Get document actions" Click="ListDocumentActions" HorizontalAlignment="Left" Margin="5,15,0,0" VerticalAlignment="Top" Width="160" Grid.ColumnSpan="2"/>
                    <DataGrid  Margin="5,55,0,0" x:Name="documentactionGrid" AutoGenerateColumns="False" CanUserAddRows="false" ItemsSource="{Binding Path=documentactionGrid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Company" Binding="{Binding Path=Action}" />
                            <DataGridTextColumn Header="Action" Binding="{Binding Path=Status}" />
                            <DataGridTextColumn Header="Created" Binding="{Binding Path=CreationTime}" />
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="OpenDocumentAction">Open</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Companies" Name="CompanyTab" Visibility="Hidden" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="27*"/>
                        <ColumnDefinition Width="767*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="showCompanies" Content="Get companies" Click="ListCompanies" HorizontalAlignment="Left" Margin="5,15,0,0" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2"/>
                    <DataGrid  Margin="5,55,0,0" x:Name="companyGrid" AutoGenerateColumns="False" CanUserAddRows="false" ItemsSource="{Binding Path=companyGrid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Administration Code" Binding="{Binding Path=AdministrationCode}" />
                            <DataGridTextColumn Header="Display name" Binding="{Binding Path=DisplayName}" />
                            <DataGridComboBoxColumn Header="Login status" x:Name="companyLoginStatusList" SelectedValueBinding="{Binding LoginStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
                            <DataGridTextColumn Header="Vat registration number" Binding="{Binding Path=AdministrationVatNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridTextColumn Header="IBAN" Binding="{Binding Path=AdministrationIban, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridTextColumn Header="Chamber of Commerce number" Binding="{Binding Path=ChamberOfCommerce, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />
                            <DataGridComboBoxColumn Header="Currency" x:Name="companyCurrencyList" SelectedValueBinding="{Binding AdministrationCurrencyCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Click="SaveCompany">Save</Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="VAT Codes" Name="VatCodeTab" Visibility="Hidden" Height="20" VerticalAlignment="Top">
